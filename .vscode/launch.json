    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch generateFonts Debug",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build Debug",
            "program": "${workspaceFolder}/src/generateFonts/bin/Debug/net8.0/generateFonts.exe",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": "Launch generateFonts Release",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build Release",
            "program": "${workspaceFolder}/src/generateFonts/bin/Release/net8.0/generateFonts.exe",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole",
        },
        {
            "name": "Launch generator tests",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build Debug",
            "program": "dotnet",
            "args": [
                "test",
                "--logger",
                "console;verbosity=detailed",
                "./src/generator/generator.fsproj"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": true,
            "console": "internalConsole",
            "env": {
                "VSTEST_HOST_DEBUG": "1"
            }
        },
        {
            "name": "Debug generator test",
            "type": "coreclr",
            "request": "attach",
            // "preLaunchTask": "run generator tests",
            "processName": "testhost.exe"
        },
        {
            "name": "Launch spiro tests",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build Debug",
            "program": "dotnet",
            "args": [
                "test",
                "./src/SpiroFs/SpiroFs.fsproj"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": "Launch spline-research tests",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build Debug",
            "program": "dotnet",
            "args": [
                "test",
                "./src/spline-research/spline-research.fsproj"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole"
        }
    ]
}