    "version": "0.2.0",
    "configurations": [

        {
            "name": "Launch main Debug",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build Debug",
            "program": "${workspaceFolder}/main/bin/Debug/net5.0/main.exe",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": "Launch main Release",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build Release",
            "program": "${workspaceFolder}/main/bin/Release/net5.0/main.exe",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole",
        },
        {
            "name": "Launch generator tests",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build Debug",
            "program": "dotnet",
            "args": ["test", "--logger", "console;verbosity=detailed", "./generator/generator.fsproj"],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": true,
            "console": "internalConsole",
            "env": {
                "VSTEST_HOST_DEBUG": "1"
            }
        },
        {
            "name": "Debug generator test",
            "type": "coreclr",
            "request": "attach",
            // "preLaunchTask": "run generator tests",
            "processName": "testhost.exe"
        },
        {
            "name": "Launch spiro tests",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build Debug",
            "program": "dotnet",
            "args": ["test", "./SpiroFs/SpiroFs.fsproj"],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": "Launch spline-research tests",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build Debug",
            "program": "dotnet",
            "args": ["test", "./spline-research/spline-research.fsproj"],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole"
        }
    ]
}