    "version": "0.2.0",
    "configurations": [

        {
            "name": "Launch main Debug",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build Debug",
            "program": "${workspaceFolder}/main/bin/Debug/netcoreapp3.0/main.exe",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": "Launch main Release",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build Release",
            "program": "${workspaceFolder}/main/bin/Release/netcoreapp3.0/main.exe",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": "Launch spiro tests",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build Debug",
            "program": "dotnet",
            "args": ["test", "./SpiroFs/SpiroFsTest/SpiroFsTest.fsproj"],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": "Launch spline-research tests",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build Debug",
            "program": "dotnet",
            "args": ["test", "./spline-research/Test/spline-research-test.fsproj"],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole"
        }
    ]
}